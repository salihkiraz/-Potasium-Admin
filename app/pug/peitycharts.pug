extends layouts/base
block page-content
	.row
		// column
		.col-lg-12
			.card
				.card-body
					h4.card-title Pie Chart
					|                                 
					h6.card-subtitle
						| Add code in span 
						code  class="pie"
						|  plus for colors 
						code data-peity='{ "fill": ["#13dafe", "#f2f2f2"]}'
					|                                 
					.row
						.col-lg-2.col-md-6.m-b-30
							span.pie(data-peity='{ "fill": ["#009efb", "#f2f2f2"]}') 1/5
							|                                         
							div Data : 1/5
						|                                     
						.col-lg-2.col-md-6.m-b-30
							span.pie(data-peity='{ "fill": ["#7460ee", "#f2f2f2"]}') 226/360
							|                                         
							div Data : 226/360
						|                                     
						.col-lg-2.col-md-6.m-b-30
							span.pie(data-peity='{ "fill": ["#f96262", "#f2f2f2"]}') 0.52/1.561
							|                                         
							div Data : 0.52/1.561
						|                                     
						.col-lg-2.col-md-6.m-b-30
							span.pie(data-peity='{ "fill": ["#26c6da", "#f2f2f2"]}') 1,4
							|                                         
							div Data : 1,4
						|                                     
						.col-lg-2.col-md-6.m-b-30
							span.pie(data-peity='{ "fill": ["#ffbc34", "#f2f2f2"]}') 226,134
							|                                         
							div Data : 226,134
						|                                     
						.col-lg-2.col-md-6
							span.pie(data-peity='{ "fill": ["#4c5667", "#f2f2f2"]}') 0.52,1.041
							|                                         
							div Data : 0.52, 1.041
					|                                 
					.row.m-t-40
						.col-12
							br
							|                                         
							br
							|                                         
							h4.card-title Donut Chart
							|                                         
							h6.card-subtitle
								| Just add in span
								code  class="donut"
						|                                     
						.col-lg-2.col-md-6.m-b-30
							span.donut(data-peity='{ "fill": ["#009efb", "#f2f2f2"]}') 1/5
							|                                         
							div Data : 1/5
						|                                     
						.col-lg-2.col-md-6.m-b-30
							span.donut(data-peity='{ "fill": ["#7460ee", "#f2f2f2"]}') 226/360
							|                                         
							div Data : 226/360
						|                                     
						.col-lg-2.col-md-6.m-b-30
							span.donut(data-peity='{ "fill": ["#f96262", "#f2f2f2"], "innerRadius": 16, "radius": 32 }') 0.52/1.561
							|                                         
							div Data : 0.52/1.561
						|                                     
						.col-lg-2.col-md-6.m-b-30
							span.donut(data-peity='{ "fill": ["#26c6da", "#f2f2f2"], "innerRadius": 20, "radius": 32 }') 1,4
							|                                         
							div Data : 1,4
						|                                     
						.col-lg-2.col-md-6.m-b-30
							span.donut(data-peity='{ "fill": ["#ffbc34", "#f2f2f2"], "innerRadius": 23, "radius": 32 }') 226,134
							|                                         
							div Data : 226,134
						|                                     
						.col-lg-2.col-md-6
							span.donut(data-peity='{ "fill": ["#4c5667", "#f2f2f2"], "innerRadius": 8, "radius": 32 }') 0.52,1.041
							|                                         
							div Data : 0.52, 1.041
					|                                 
					.row.m-t-40
						.col-12
							br
							|                                         
							br
							|                                         
							h4.card-title Bar Chart
							|                                         
							h6.card-subtitle
								| Add class in span
								code  peity-bar
						|                                     
						.col-lg-4.m-b-30
							span.peity-bar(data-peity='{ "fill": ["#7460ee", "#009efb"]}', data-width="100%", data-height="60") 6,2,8,4,3,8,1,3,6,5,9,2,8,1,4,8,9,8,2,1
						|                                     
						.col-lg-4.m-b-30
							span.peity-bar(data-peity='{ "fill": ["#f96262", "#f2f2f2"]}', data-width="100%", data-height="60") 6,2,8,4,-3,8,1,-3,6,-5,9,2,-8,1,4,8,9,8,2,1
						|                                     
						.col-lg-4.m-b-30
							span.peity-bar(data-peity='{ "fill": ["#4c5667", "#26c6da"]}', data-width="100%", data-height="60") 6,2,8,4,3,8,1,3,6,5,9,2,8,1,4,8,9,8,2,1
					|                                 
					.row.m-t-40
						.col-12
							br
							|                                         
							br
							|                                         
							h4.card-title Line Chart
							|                                         
							h6.card-subtitle
								| Add class in span
								code  peity-line
						|                                     
						.col-lg-4.m-b-30
							span.peity-line(data-width="100%", data-height="60") 6,2,8,4,3,8,1,3,6,5,9,2,8,1,4,8,9,8,2,1
						|                                     
						.col-lg-4.m-b-30
							span.peity-line(data-width="100%", data-height="60") 6,2,8,4,-3,8,1,-3,6,-5,9,2,-8,1,4,8,9,8,2,1
						|                                     
						.col-lg-4.m-b-30
							span.peity-line(data-width="100%", data-height="60") 6,2,8,4,3,8,1,3,6,5,9,2,8,1,4,8,9,8,2,1
		// column
block scripts
	// Peity Charts JavaScript
	script(src="libs/peity/jquery.peity.min.js")
	script( src="js/pages/peitycharts-data.min.js")