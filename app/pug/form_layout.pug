											|  Option three is disabled
						.form-group
							label(for='select-1') Checkbox
							.form-check
								label.form-check-label
									input.form-check-input(type='checkbox', value='')
									|  Option one is this and that—be sure to include why it's great
						.form-group
							.form-check.disabled
								label.form-check-label
									input.form-check-input(type='checkbox', value='', disabled='')
									|  Option two is disabled
						.form-group
							label(for='disabledTextInput') Disabled input
							input#disabledTextInput.form-control(type='text',disabled="disabled", placeholder='Disabled input')
												
						.form-group
							label(for='inputDate') Schedule Preview Date
								input.form-control(type='date', class='id=', name='inputDate', placeholder='Enter date')

						.form-group
							label  Price
								.input-group
									span.input-group-prepend 
										.input-group-text $
									input.form-control(type='text', placeholder='Price enter', name='price')
									span.input-group-append 
										.input-group-text .00
						.form-actions
								button.btn.btn-gray(type='submit') Reset 
								
								button.btn.btn-primary.mr-1(type='button') Save 
									i.fa.fa-floppy-o
