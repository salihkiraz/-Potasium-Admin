extends layouts/base
block page-content
	+row()
		+col("12","12","12","12","12")            
				+basiccard("Horizontal Form" )
					.col-md-12
						.form-group.row
							label.col-md-2(for='input-text-1') Text Input 
							input#input-id-1.form-control.col-md-10(type='email', placeholder='Enter email')
						.form-group.row
							label.col-md-2(for='input-password-1') Password
							input#input-password-1.form-control.col-md-10(type='password', placeholder='Password')
						.form-group.row
							label.col-md-2(for='select-1') Select
							select#select-1.form-control.col-md-10
										option(value='none', selected='', disabled='') select 1
										option(value='select2') select 2
										option(value='select3') select 3
										option(value='select4') select 4
										option(value='select5') select 5
										option(value='select6') select 6
											
						.form-group.row
							label.col-md-2(for='exampleFormControlSelect2') Example multiple select
							select#exampleFormControlSelect2.form-control.col-md-10(multiple='')
								option 1
								option 2
								option 3
								option 4
								option 5


					fieldset.form-group
						.row
							legend.col-form-legend.col-sm-2 Radios
							.col-sm-10
								.form-check
									label.form-check-label 
										input#gridRadios1.form-check-input(type='radio', name='gridRadios', value='option1', checked='') 
										|  Option one is this and that—be sure to include why it's great
								.form-check
									label.form-check-label 
										input#gridRadios2.form-check-input(type='radio', name='gridRadios', value='option2')
										|  Option two can be something else and selecting it will deselect option one
								.form-check.disabled
									label.form-check-label
										input#gridRadios3.form-check-input(type='radio', name='gridRadios', value='option3', disabled='')  
										|  Option three is disabled
					.form-group.row
						label.col-md-2(for='select-1') Checkbox
						.form-check.col-md-10
							label.form-check-label
								input.form-check-input(type='checkbox', value='')
								|  Option one is this and that—be sure to include why it's great
					.form-actions

							button.btn.btn-grey(type='submit') Reset 
							button.btn.btn-primary.mr-1(type='button') Save 
								i.fa.fa-floppy-o

				+basiccard("Horizontal Form")
					form
						.form-body
							h4.form-section User İnfo
								i.fa.fa-user
							.row
								.col-md-6
									.form-group.row
										label.col-md-3(for='userinput1') Fist Name
										.col-md-9
											input#userinput1.form-control(type='text', placeholder='First Name', name='firstname')
								.col-md-6
									.form-group.row
										label.col-md-3(for='userinput2') Last Name
										.col-md-9
											input#userinput2.form-control(type='text', placeholder='Last Name', name='lastname')
							.row
								.col-md-6
									.form-group.row
										label.col-md-3(for='userinput3') Username
										.col-md-9
											input#userinput3.form-control(type='text', placeholder='Username', name='username')
								.col-md-6
									.form-group.row
										label.col-md-3(for='userinput4') Nick Name
										.col-md-9
											input#userinput4.form-control(type='text', placeholder='Nick Name', name='nickname')
							h4.form-section Detail info
								i.fa.fa-id-card
							.row
								.col-md-6
									.form-group.row
										label.col-md-3(for='userinput5') Email
										.col-md-9
											input#userinput5.form-control(type='email', placeholder='email')
									.form-group.row
										label.col-md-3(for='userinput6') Website
										.col-md-9
											input#userinput6.form-control(type='url', placeholder='http://')
									.form-group.row
										label.col-md-3 Contact Number
										.col-md-9
											input#userinput7.form-control(type='tel', placeholder='Contact Number')
								.col-md-6
									.form-group.row
										label.col-md-2(for='userinput8') Resume
										.col-md-10
											textarea#userinput8.form-control(rows='7', name='resume', placeholder='resume')


		+col("12","12","12","12","6")            
				+basiccard("Vertical Form" )
					.col-md-12
						.form-group(style='position: static;')
							label(for='input-text-1') Text Input
