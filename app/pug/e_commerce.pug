						li.mix.boy.sport.dress.shoe
							img(src="assets/img/ecommerce/6.jpeg", alt="Image 6")
						| 				
						li.mix.girl.sport.skirt.jeans
							img(src="assets/img/ecommerce/7.jpeg", alt="Image 7")
						| 				
						li.mix.girl.relax.dress.shirt
							img(src="assets/img/ecommerce/8.jpeg", alt="Image 8")
