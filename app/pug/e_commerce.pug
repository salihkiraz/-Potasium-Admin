				// cd-gallery
				.cd-filter
					form
						.cd-filter-block
							h4 Search
							| 					
							| 					
							.cd-filter-content
								input(type="search", placeholder="Try girl...")
							// cd-filter-content
							// cd-filter-block
							.cd-filter-block
								h4 Check boxes
								| 					
								ul.cd-filter-content.cd-filters.list
									li
										input#checkbox1.filter(data-filter=".relax", type="checkbox")
										| 			    			
										label.checkbox-label(for="checkbox1") Relax
									| 						
									li
										input#checkbox2.filter(data-filter=".sport", type="checkbox")
										| 							
										label.checkbox-label(for="checkbox2") Sport
									| 						
									li
										input#checkbox3.filter(data-filter=".night", type="checkbox")
										| 							
										label.checkbox-label(for="checkbox3") Night
								// cd-filter-content
								// cd-filter-block
								.cd-filter-block
									h4 Select
									| 					
									| 					
									.cd-filter-content
										.cd-select.cd-filters
											select#selectThis.filter(name="selectThis")
												option(value="") Choose an option
												| 								
												option(value=".jeans") Jeans
												| 								
												option(value=".hat") Hat
												| 								
												option(value=".shoe") Shoe
												| 								
												option(value=".shirt") Shirt
										// cd-select
										// cd-filter-content
										// cd-filter-block
										.cd-filter-block
											h4 Radio buttons
											| 					
											ul.cd-filter-content.cd-filters.list
												li
													input#radio1.filter(data-filter="", type="radio", name="radioButton", checked="")
													| 							
													label.radio-label(for="radio1") All
												| 						
												li
													input#skirt.filter(data-filter=".skirt", type="radio", name="radioButton")
													| 							
													label.radio-label(for="skirt") Skirt
												| 						
												li
													input#dress.filter(data-filter=".dress", type="radio", name="radioButton")
													| 							
													label.radio-label(for="dress") Dress
											// cd-filter-content
											// cd-filter-block
					| 			
					a.cd-close(href="#0") Close
				a.cd-filter-trigger(href="#0") Filters
